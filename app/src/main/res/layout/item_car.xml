<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="175dp"
    android:layout_height="320dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    android:backgroundTint="#FFFFFF">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="295dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/header_car"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardElevation="0dp"
            android:backgroundTint="#31DDDADD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
            <ImageView
                android:id="@+id/imageView_car"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/img_car"
                android:layout_gravity="center"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_car"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView_nameCar"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="KAWASAKI H2R"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                />
            <ImageView
                android:id="@+id/imageView_brandCar"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="@drawable/yamaha"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/textView_priceCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300.000 d/ngÃ y"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_gravity="bottom"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>